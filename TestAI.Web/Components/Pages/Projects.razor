@page "/projects"
@using TestAI.Web.Models
@using TestAI.Web.Services
@inject IProjectService ProjectService
@rendermode InteractiveServer

<PageTitle>Projects</PageTitle>

<h1>Projects</h1>

<p>Manage your software development projects and track progress.</p>

@if (_projects == null)
{
    <p><em>Loading projects...</em></p>
}
else if (!_projects.Any())
{
    <div class="alert alert-info">
        No projects found. Create your first project to get started!
    </div>
}
else
{
    <div class="row">
        @foreach (var project in _projects)
        {
            <div class="col-md-6 mb-4">
                <div class="card @GetProjectCardClass(project)">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@project.Name</h5>
                        <span class="badge @GetStatusBadgeClass(project.Status)">
                            @project.Status
                        </span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@project.Description</p>

                        <div class="mb-3">
                            <label class="form-label">Progress</label>
                            <div class="progress">
                                <div class="progress-bar @GetProgressBarClass(project.CompletionPercentage)"
                                     role="progressbar"
                                     style="width: @project.CompletionPercentage%"
                                     aria-valuenow="@project.CompletionPercentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @project.CompletionPercentage.ToString("F0")%
                                </div>
                            </div>
                        </div>

                        <div class="row text-center mb-3">
                            <div class="col">
                                <strong>@project.Tasks.Count</strong>
                                <br />
                                <small class="text-muted">Total Tasks</small>
                            </div>
                            <div class="col">
                                <strong>@project.Tasks.Count(t => t.Status == WorkItemStatus.Completed)</strong>
                                <br />
                                <small class="text-muted">Completed</small>
                            </div>
                            <div class="col">
                                <strong>@project.TeamMembers.Count</strong>
                                <br />
                                <small class="text-muted">Team Members</small>
                            </div>
                        </div>

                        @if (project.IsAtRisk)
                        {
                            <div class="alert alert-warning mb-3 py-2">
                                <small><strong>Warning:</strong> Project is at risk of missing deadline</small>
                            </div>
                        }

                        @if (project.DueDate.HasValue)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    Due: @project.DueDate.Value.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="/projects/@project.Id" class="btn btn-primary btn-sm">View Details</a>
                        <a href="/projects/@project.Id/tasks" class="btn btn-outline-secondary btn-sm">Manage Tasks</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <button class="btn btn-success" @onclick="ShowCreateProjectModal">
        Create New Project
    </button>
</div>

@code {
    private IEnumerable<Project>? _projects;

    protected override async Task OnInitializedAsync()
    {
        _projects = await ProjectService.GetAllProjectsAsync();
    }

    private string GetStatusBadgeClass(ProjectStatus status) => status switch
    {
        ProjectStatus.Planning => "bg-secondary",
        ProjectStatus.InProgress => "bg-primary",
        ProjectStatus.OnHold => "bg-warning text-dark",
        ProjectStatus.Completed => "bg-success",
        ProjectStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetProgressBarClass(double percentage) => percentage switch
    {
        >= 75 => "bg-success",
        >= 50 => "bg-info",
        >= 25 => "bg-warning",
        _ => "bg-danger"
    };

    private string GetProjectCardClass(Project project)
    {
        if (project.IsAtRisk) return "border-warning";
        if (project.Status == ProjectStatus.Completed) return "border-success";
        return "";
    }

    private void ShowCreateProjectModal()
    {
        // Placeholder for modal implementation
    }
}
