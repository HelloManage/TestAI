@page "/projects/{ProjectId:guid}"
@using TestAI.Web.Models
@using TestAI.Web.Services
@inject IProjectService ProjectService
@rendermode InteractiveServer

<PageTitle>@(_project?.Name ?? "Project Details")</PageTitle>

@if (_project == null)
{
    <p><em>Loading project...</em></p>
}
else
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/projects">Projects</a></li>
            <li class="breadcrumb-item active" aria-current="page">@_project.Name</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@_project.Name</h1>
        <span class="badge @GetStatusBadgeClass(_project.Status) fs-6">
            @_project.Status
        </span>
    </div>

    <p class="lead">@_project.Description</p>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Project Statistics</h5>
                </div>
                <div class="card-body">
                    @if (_statistics != null)
                    {
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h3 class="text-primary">@_statistics.TotalTasks</h3>
                                <p class="text-muted mb-0">Total Tasks</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-success">@_statistics.CompletedTasks</h3>
                                <p class="text-muted mb-0">Completed</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-danger">@_statistics.OverdueTasks</h3>
                                <p class="text-muted mb-0">Overdue</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-info">@_statistics.TeamMemberCount</h3>
                                <p class="text-muted mb-0">Team Members</p>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <h6>Tasks by Priority</h6>
                                @foreach (var priority in _statistics.TasksByPriority)
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge @GetPriorityBadgeClass(priority.Key)">
                                            @priority.Key
                                        </span>
                                        <span>@priority.Value tasks</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <h6>Completion Metrics</h6>
                                <p class="mb-1">
                                    <strong>Completion Rate:</strong>
                                    @_project.CompletionPercentage.ToString("F1")%
                                </p>
                                <p class="mb-1">
                                    <strong>Avg. Task Duration:</strong>
                                    @_statistics.AverageTaskCompletionDays.ToString("F1") days
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Project Timeline</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Created:</strong><br />
                        @_project.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                    @if (_project.StartDate.HasValue)
                    {
                        <p class="mb-2">
                            <strong>Start Date:</strong><br />
                            @_project.StartDate.Value.ToString("MMM dd, yyyy")
                        </p>
                    }
                    @if (_project.DueDate.HasValue)
                    {
                        <p class="mb-2">
                            <strong>Due Date:</strong><br />
                            <span class="@(IsOverdue() ? "text-danger" : "")">
                                @_project.DueDate.Value.ToString("MMM dd, yyyy")
                            </span>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Team Members</h5>
                    <span class="badge bg-secondary">@_project.TeamMembers.Count</span>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var member in _project.TeamMembers)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@member.FullName</strong>
                                <br />
                                <small class="text-muted">@member.Email</small>
                            </div>
                            <span class="badge bg-info">@member.Role</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Tasks</h5>
                    <a href="/projects/@_project.Id/tasks" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var task in _project.Tasks.OrderByDescending(t => t.CreatedAt).Take(5))
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@task.Title</strong>
                                    @if (task.Assignee != null)
                                    {
                                        <br />
                                        <small class="text-muted">Assigned to @task.Assignee.FullName</small>
                                    }
                                </div>
                                <span class="badge @GetTaskStatusBadgeClass(task.Status)">
                                    @task.Status
                                </span>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid ProjectId { get; set; }

    private Project? _project;
    private ProjectStatistics? _statistics;

    protected override async Task OnInitializedAsync()
    {
        _project = await ProjectService.GetProjectByIdAsync(ProjectId);
        if (_project != null)
        {
            _statistics = await ProjectService.GetProjectStatisticsAsync(ProjectId);
        }
    }

    private bool IsOverdue()
    {
        return _project?.DueDate.HasValue == true &&
               _project.DueDate.Value < DateTime.UtcNow &&
               _project.Status != ProjectStatus.Completed;
    }

    private string GetStatusBadgeClass(ProjectStatus status) => status switch
    {
        ProjectStatus.Planning => "bg-secondary",
        ProjectStatus.InProgress => "bg-primary",
        ProjectStatus.OnHold => "bg-warning text-dark",
        ProjectStatus.Completed => "bg-success",
        ProjectStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetPriorityBadgeClass(TaskPriority priority) => priority switch
    {
        TaskPriority.Critical => "bg-danger",
        TaskPriority.High => "bg-warning text-dark",
        TaskPriority.Medium => "bg-info",
        TaskPriority.Low => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetTaskStatusBadgeClass(WorkItemStatus status) => status switch
    {
        WorkItemStatus.Backlog => "bg-secondary",
        WorkItemStatus.Todo => "bg-info",
        WorkItemStatus.InProgress => "bg-primary",
        WorkItemStatus.InReview => "bg-warning text-dark",
        WorkItemStatus.Completed => "bg-success",
        _ => "bg-secondary"
    };
}
